<?xml version="1.0" encoding="utf-8" ?>

<!-- Voice controlled keyboard for handling user input -->
<grammar xml:lang="en" root="getInput" tag-format="semantics/1.0" version="1.0" xmlns="http://www.w3.org/2001/06/grammar">
  <!-- ROOT -->
  <rule id="getInput" scope="public">
    <one-of>
      <item>
        <ruleref uri="#letter" />
        <tag>out.inputLetter = rules.letter;</tag>
      </item>
      <item>
        <ruleref uri="#special"/>
        <tag>out.inputLetter = rules.special;</tag>
      </item>
      <item>
        <ruleref uri="#capsLock"/>
        <tag>out.capsLock = rules.capsLock;</tag>
      </item>
    </one-of>
  </rule>

  <rule id="letter">
    <one-of>
      <item>
        <one-of> 
          <item>alpha</item>
          <item>A</item>
        </one-of>
        <tag>out = "A";</tag>
      </item>
      <item>
        <one-of> 
          <item>bravo</item>
          <item>B</item>
        </one-of> 
        <tag>out = "B";</tag>
      </item>
      <item>
        <one-of> 
          <item>charlie</item>
          <item>C</item>
        </one-of> 
        <tag>out = "C";</tag>
      </item>
      <item>
        <one-of> 
          <item>delta</item>
          <item>D</item>
        </one-of> 
        <tag>out = "D";</tag>
      </item>
      <item>
        <one-of> 
         <item>echo</item>
         <item>E</item>
        </one-of> 
        <tag>out = "E";</tag>
      </item>
      <item>
        <one-of> 
          <item>foxtrot</item>
          <item>F</item>
        </one-of> 
        <tag>out = "F";</tag>
      </item>
      <item>
        <one-of> 
         <item>golf</item>
         <item>G</item>
        </one-of> 
        <tag>out = "G";</tag>
      </item>
      <item>
        <one-of> 
          <item>hotel</item>
          <item>H</item>
        </one-of> 
        <tag>out = "H";</tag>
      </item>
      <item>
        <one-of> 
          <item>india</item>
          <item>I</item>
        </one-of> 
        <tag>out = "I";</tag>
      </item>
      <item>
        <one-of> 
          <item>juliet</item>
          <item>J</item>
        </one-of> 
        <tag>out = "J";</tag>
      </item>
      <item>
        <one-of> 
         <item>kilo</item>
         <item>K</item>
        </one-of> 
        <tag>out = "K";</tag>
      </item>
      <item>
        <one-of>
         <item>lima</item>
         <item>L</item>
        </one-of> 
        <tag>out = "L";</tag>
      </item>
      <item>
        <one-of> 
         <item>mike</item>
         <item>M</item>
        </one-of> 
        <tag>out = "M";</tag>
      </item>
      <item>
        <one-of>
          <item>november</item>
          <item>N</item>
        </one-of> 
        <tag>out = "N";</tag>
      </item>
      <item>
        <one-of> 
          <item>oscar</item>
          <item>O</item>
        </one-of> 
        <tag>out = "O";</tag>
      </item>
      <item>
        <one-of> 
         <item>papa</item>
         <item>P</item>
        </one-of> 
        <tag>out = "P";</tag>
      </item>
      <item>
        <one-of> 
          <item>quebec</item>
          <item>Q</item>
        </one-of> 
        <tag>out = "Q";</tag>
      </item>
      <item>
        <one-of> 
          <item>romeo</item>
          <item>R</item>
        </one-of> 
        <tag>out = "R";</tag>
      </item>
      <item>
        <one-of> 
          <item>sierra</item>
          <item>S</item>
        </one-of> 
        <tag>out = "S";</tag>
      </item>
      <item>
        <one-of> 
          <item>tango</item>
          <item>T</item>
        </one-of> 
        <tag>out = "T";</tag>
      </item>
      <item>
        <one-of> 
          <item>uniform</item>
          <item>U</item>
        </one-of> 
        <tag>out = "U";</tag>
      </item>
      <item>
        <one-of> 
          <item>victor</item>
          <item>V</item>
        </one-of> 
        <tag>out = "V";</tag>
      </item>
      <item>
        <one-of> 
          <item>whiskey</item>
          <item>W</item>
        </one-of> 
        <tag>out = "W";</tag>
      </item>
      <item>
        <one-of> 
          <item>x-ray</item>
          <item>X</item>
        </one-of> 
        <tag>out = "X";</tag>
      </item>
      <item>
        <one-of> 
          <item>yankee</item>
          <item>Y</item>
        </one-of> 
        <tag>out = "Y";</tag>
      </item>
      <item>
        <one-of> 
         <item>zulu</item>
         <item>Z</item>
        </one-of> 
        <tag>out = "Z";</tag>
      </item>
    </one-of>
  </rule>

  <rule id="special">
    <one-of>
      <item>
        <item repeat="0-1">insert</item>
        <one-of>
          <item>space</item>
          <item>blank</item>
        </one-of>
        <tag>out = "Space";</tag>
      </item>

      <!-- Cancel actions -->
      <item>
        <item repeat="0-1">insert</item>
        <one-of>
          <item>backspace</item>
          <item>back space</item>
          <item>undo</item>
        </one-of>
        <tag>out = "Backspace";</tag>
      </item>

      <!-- Confirmation actions -->
      <item>
        <one-of>
          <item>enter</item>
          <item>submit</item>
          <item>save</item>
        </one-of>
        <one-of>
          <item>form</item>
          <item>input</item>
        </one-of>
        <tag>out = "Submit";</tag>
      </item>
    </one-of>
  </rule>

  <!-- Toggle letter casing -->
  <rule id="capsLock">
    <one-of>
      <item>
        capslock
        <one-of>
          <item>on <tag>out = true;</tag> </item>
          <item>off <tag>out = false;</tag> </item>
        </one-of>
      </item>

      <item>
        <one-of>
          <item>uppercase</item>
          <item>upper case</item>
        </one-of>
        <tag>out = true;</tag>
      </item>
      
      <item>
        <one-of>
          <item>lowercase</item>
          <item>lower case</item>
        </one-of>
        <tag>out = false;</tag>
      </item>
    </one-of>
  </rule>
</grammar>
