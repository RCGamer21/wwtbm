<?xml version="1.0" encoding="utf-8" ?>

<grammar xml:lang="en" root="mainMenu" tag-format="semantics/1.0" version="1.0" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="mainMenu">
    <one-of>
      <item>
        <ruleref uri="#playGame" />
        <tag>out = rules.playGame;</tag>
      </item>
      <item>
        <ruleref uri="#quitGame" />
        <tag>out = rules.quitGame;</tag>
      </item>
    </one-of>
  </rule>

  <rule id="playGame">
    <one-of>
      <item>play</item>
      <item>play the game</item>
      <item>new game</item>
      <item>start game</item>
      <item>start new game</item>
      <item>play new game</item>
    </one-of>
    <tag>out.option = "play-game";</tag>
  </rule>

  <rule id="quitGame">
    <one-of>
      <item>quit</item>
      <item>close</item>
      <item>shutdown</item>
    </one-of>
    <tag>out.option = "quit-game";</tag>
  </rule>
</grammar>
